<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="30dp">

            <!-- 로고 -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/logo" />

            <!-- 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="로그인하세요"
                android:textSize="25dp"
                android:fontFamily="@font/nanum_gothic_bold"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Enter your email and password to log in"
                android:textColor="#808080"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="35dp" />

            <!-- 이메일 입력 -->
            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:hint="이메일 주소"
                android:padding="10dp"
                android:background="@drawable/edge"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp" />

            <!-- 비밀번호 입력 -->
            <EditText
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:hint="비밀번호"
                android:padding="10dp"
                android:background="@drawable/edge"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:layout_marginBottom="30dp" />

            <!-- 일반 로그인 버튼 -->
            <Button
                android:id="@+id/normalLogin"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="일반 계정 로그인"
                android:textColor="@android:color/white"
                android:backgroundTint="#5EC1C3"
                android:layout_marginBottom="10dp" />

            <!-- 구분선 -->
            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#CCCCCC" />

            <!-- 관리자 로그인 버튼 -->
            <Button
                android:id="@+id/adminLogin"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="관리자 계정 로그인"
                android:textColor="#000000"
                android:backgroundTint="#C7F7FB"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>

    <!-- 회원가입 부분 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요? "
            android:textColor="#888888" />

        <TextView
            android:id="@+id/signupLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#4A74E9"
            android:fontFamily="@font/nanum_gothic_bold"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop ="4dp"/>
    </LinearLayout>
</LinearLayout>
